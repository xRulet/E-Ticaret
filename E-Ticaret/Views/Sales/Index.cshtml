@using PagedList;
@using PagedList.Mvc;
@model IPagedList<EntityLayer.Entites.Sales>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="banner_section layout_padding">
    <div class="container">
        <div id="my_slider" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1 class="banner_taital">Hayalindeki <br>Bıçaklar bu sayfada</h1>
                            <div class="buynow_bt"><a href="#">Satın Al</a></div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1 class="banner_taital">Özel Çelikten <br>Yapılmış Bıçaklar bu sayfada</h1>
                            <div class="buynow_bt"><a href="#">Satın Al</a></div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1 class="banner_taital">Kişiye<br>Özel Bıçaklar bu sayfada</h1>
                            <div class="buynow_bt"><a href="#">Satın Al</a></div>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#my_slider" role="button" data-slide="prev">
                <i class="fa fa-angle-left"></i>
            </a>
            <a class="carousel-control-next" href="#my_slider" role="button" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
        </div>
    </div>
</div>
  </div>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2>Satış Listesi</h2>
            <table class="table table-bordered">
                <tr>
                    <th>Id</th>
                    <th>Ürün Ad</th>
                    <th>Adet</th>
                    <th>Fiyat</th>
                    <th>Resim</th>
                    <th>Tarih</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Product.Name</td>
                            <td>@item.Quantity</td>
                            <td>@item.Price</td>
                            <td><img src="~/Content/Image/@item.Product.Image" width="200" height="200" /></td>
                            <td>@Convert.ToDateTime(item.Date).ToString("dd/MM/yyyy")</td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
        @Html.PagedListPager(Model, sayfa => Url.Action("Index", new { sayfa }), PagedListRenderOptions.Classic)
    </div>
 </div>

            

